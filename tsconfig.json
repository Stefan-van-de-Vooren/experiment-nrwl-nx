{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myworkspace/pages/page1": ["libs/pages/page1/src/index.ts"],
      "@myworkspace/pages/page2": ["libs/pages/page2/src/index.ts"],
      "@myworkspace/pages/page3": ["libs/pages/page3/src/index.ts"],
      "@myworkspace/pages/page4": ["libs/pages/page4/src/index.ts"],
      "@myworkspace/ui/header": ["libs/ui/header/src/index.ts"],
      "@myworkspace/ui/components": ["libs/ui/components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
